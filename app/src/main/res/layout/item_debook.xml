<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/debook_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/debook_item_height"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/debook_food_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/debook_item_text_size"
            tools:text="澳洲特色雪花" />

        <TextView
            android:id="@+id/debook_table_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/debook_item_text_size"
            tools:text="1大001" />

        <TextView
            android:id="@+id/debook_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/debook_item_text_size"
            tools:text="2份" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/debook_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/debook_bg"
            tools:text="退菜时间：12:30" />

        <TextView
            android:id="@+id/current_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/debook_bg"
            tools:text="当前时间：13:30" />
    </LinearLayout>

</LinearLayout>
