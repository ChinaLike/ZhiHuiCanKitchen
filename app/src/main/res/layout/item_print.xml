<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/print_item_height"
    android:background="@color/white"
    android:id="@+id/print_parent"
    android:paddingLeft="@dimen/print_item_padding"
    android:paddingRight="@dimen/print_item_padding">

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="菜品名字"
        android:textColor="@color/print_item_text"
        android:textSize="@dimen/print_item_text_size" />

    <TextView
        android:id="@+id/table_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="桌号"
        android:textColor="@color/print_item_text"
        android:textSize="@dimen/print_item_text_size" />

    <TextView
        android:id="@+id/remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="已经补打5次  2017年1月4日"
        android:textColor="@color/print_item_text_time" />

    <View
        android:id="@+id/print_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line"/>

</RelativeLayout>
